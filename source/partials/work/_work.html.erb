<article class="container-fluid white__bg">
  <div class="container" >
    <div class="row">
      <div class="col-sm-12">
        <h1>Our work</h1>
      </div>

      <div class="col-sm-12">
        <% if paginate && num_pages > 1 %>
          <p>Page <%= page_number %> of <%= num_pages %></p>

          <% if prev_page %>
            <p><%= link_to 'Previous page', prev_page %></p>
          <% end %>
        <% end %>
      </div>

      <% page_articles.each_with_index do |article, i| %>
        <% link_to article, :class => "" do %>
          <div class="col-sm-4">
            <h2 class="h3"><%= article.title %></h2>
            <%= image_tag article.data.img, { :class => 'img-responsive' } %>
          </div>
        <% end %>
      <% end %>

      <div class="col-sm-12">
        <% if paginate %>
          <% if next_page %>
            <p><%= link_to 'Next page', next_page %></p>
          <% end %>
        <% end %>
      </div>

      <div class="col-sm-12">
        <div class="gutter"></div>
      </div>

    </div>
  </div>
</article>
